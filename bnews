#!/bin/bash
if [[ -z $1 ]]
then 
    date=$(date '+%Y/%m/%d')
else
    echo "Please enter date in format YYYY/MM/DD"
    read date
fi
cachedir="/tmp/news"
datedir=$(sed 's/\//-/g' <<<$date)

mkdir -p $cachedir/$datedir

curl -L "https://epaper.thedailystar.net/TDS/$date/Bangladesh/BUS/" > /tmp/news/tmpbus.html 
linkdir=$(grep -Eio '<a [^>]+>' /tmp/news/tmpbus.html | cut -d\" -f2 | grep "pdf")

if [[ -z $linkdir ]]
then
    echo "Not yet published"
    exit 1
fi
    wget -rnc -O $cachedir/$datedir/business.pdf https://epaper.thedailystar.net/$linkdir
zathura $cachedir/$datedir/business.pdf


